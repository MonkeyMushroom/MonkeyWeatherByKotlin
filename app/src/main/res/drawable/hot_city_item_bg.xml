<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
            <corners android:radius="3dp" />
            <solid android:color="@color/base_white" />
            <stroke android:width="@dimen/base_line_height" android:color="#e4e4e4" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
            <corners android:radius="3dp" />
            <solid android:color="@color/base_gray" />
            <stroke android:width="@dimen/base_line_height" android:color="#e4e4e4" />
        </shape>
    </item>
</selector>